{
  "compilerOptions": {
    "target": "ES2020", // O una versión más reciente de ECMAScript
    "module": "commonjs", // Módulo estándar para Node.js
    "rootDir": "./src", // Directorio raíz de tus archivos TypeScript
    "outDir": "./dist", // Directorio donde se guardarán los archivos JavaScript compilados
    "esModuleInterop": true, // Permite la interoperabilidad con módulos CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Habilita todas las comprobaciones estrictas de tipos
    "skipLibCheck": true, // Omite la comprobación de tipos de los archivos de declaración
    "resolveJsonModule": true // Permite importar archivos .json
  },
  "include": ["src/**/*"], // Qué archivos incluir en la compilación
  "exclude": ["node_modules", "**/*.spec.ts"] // Qué archivos excluir
}
